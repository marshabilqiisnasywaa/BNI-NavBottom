<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <!-- Profile Title -->
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pp"
        android:scaleType="centerCrop"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ikhwan Hanip Pridauz"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gender -->
    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laki-Laki"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Ubah Email -->
    <TextView
        android:id="@+id/change_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Ubah Email"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_change"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/profile_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintWidth_default="spread"/>

    <!-- Ubah Password -->
    <TextView
        android:id="@+id/change_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Ubah Password"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_change"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/change_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_default="spread"/>

    <!-- Ubah Nomor Telepon -->
    <TextView
        android:id="@+id/change_phone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Ubah Nomor Telepon"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_change"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/change_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_default="spread"/>

    <!-- Ubah Tanggal Lahir -->
    <TextView
        android:id="@+id/change_dob"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Ubah Tanggal Lahir"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_change"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/change_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_default="spread"/>


</androidx.constraintlayout.widget.ConstraintLayout>