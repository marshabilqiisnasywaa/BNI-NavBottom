<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Background Color -->
            <solid android:color="@color/white"/>

            <!-- Border -->
            <stroke
                android:width="2dp"
                android:color="#E2E2E2"/>

            <!-- Corner Radius -->
            <corners android:radius="8dp"/>

            <!-- Padding -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</selector>
