<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bni_navbottom.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/mutasiFragment"
        android:name="com.example.bni_navbottom.MutasiFragment"
        android:label="fragment_mutasi"
        tools:layout="@layout/fragment_mutasi" />

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.example.bni_navbottom.InboxFragment"
        android:label="fragment_inbox"
        tools:layout="@layout/fragment_inbox" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.bni_navbottom.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />



</navigation>